<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Section One -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">
        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <de.hdodenhof.circleimageview.CircleImageView 
                
                android:id="@+id/profileImage"
                android:layout_centerVertical="true"
                android:src="@drawable/kheang2d"
                android:layout_margin="5dp"
                android:layout_width="65dp"
                android:layout_height="65dp" />
            <TextView
                android:id="@+id/nameTextView"
                android:text="Lee kheang"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/PlaceTextView"
                android:layout_below="@+id/nameTextView"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_marginLeft="15dp"
                android:text="Phnom Penh, KH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/phone"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_below="@+id/PlaceTextView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="@color/colorOrange"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </LinearLayout>
                
        </RelativeLayout>

    </RelativeLayout>
    <!-- Section Two -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22">
        <TextView
            android:id="@+id/balanceTextView"
            android:text="$32,405,00"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_above="@+id/balanceTextView"
            android:text="Account Balance"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <!-- Section there -->
    <LinearLayout
          android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="0.5">
        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:layout_centerVertical="true"
                android:src="@drawable/lika"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/DescriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:layout_marginLeft="10dp"
                android:text="Transfer to Lika"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/transitionDataTextView"
                android:layout_below="@+id/DescriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:layout_marginLeft="10dp"
                android:text="22-May-2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorRed"
                android:textSize="13sp"
                android:text="-72000.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend1ImageView"
                android:layout_centerVertical="true"
                android:src="@drawable/danith"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/Description1TextView"
                android:layout_toRightOf="@+id/friend1ImageView"
                android:layout_marginLeft="10dp"
                android:text="Deposit to Kheang"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/transition1DataTextView"
                android:layout_below="@+id/Description1TextView"
                android:layout_toRightOf="@+id/friend1ImageView"
                android:layout_marginLeft="10dp"
                android:text="22-May-2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/amount1TextView"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorGreen"
                android:textSize="13sp"
                android:text="3200.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@+id/amount1TextView"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend3ImageView"
                android:layout_centerVertical="true"
                android:src="@drawable/panha"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/Description3TextView"
                android:layout_toRightOf="@+id/friend3ImageView"
                android:layout_marginLeft="10dp"
                android:text="Deposit to Panha"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/transition3DataTextView"
                android:layout_below="@+id/Description3TextView"
                android:layout_toRightOf="@+id/friend3ImageView"
                android:layout_marginLeft="10dp"
                android:text="22-May-2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/amount3TextView"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorGreen"
                android:textSize="13sp"
                android:text="4000.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@+id/amount3TextView"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>
    
</LinearLayout>